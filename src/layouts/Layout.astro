---
import '../styles/global.css'
import logo from '../assets/logo.jpg'
---


<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Resonant Systems</title>
		<meta name="description" content="Independent software systems focused on distributed infrastructure, payments, and media tooling." />
		<meta name="keywords" content="software, systems, infrastructure, payments, media, tooling" />
		<meta name="author" content="Resonant Systems" />
		<meta name="robots" content="index, follow" />
		<meta name="googlebot" content="index, follow" />
		<meta name="bingbot" content="index, follow" />
		<meta name="yandexbot" content="index, follow" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content="Resonant Systems" />
		<meta property="og:description" content="Independent software systems focused on distributed infrastructure, payments, and media tooling." />
		<meta property="og:image" content={`${Astro.url.origin}/logo.jpg`} />
		<meta property="og:url" content={Astro.url.href} />
		
		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Resonant Systems" />
		<meta name="twitter:description" content="Independent software systems focused on distributed infrastructure, payments, and media tooling." />
		<meta name="twitter:image" content={`${Astro.url.origin}/logo.jpg`} />
	</head>
	<body class="bg-[#f6f4f0] text-[#222222] antialiased min-h-screen">
		<div class="relative min-h-screen">
			<!-- Background decoration -->
			<div class="fixed inset-0 overflow-hidden pointer-events-none opacity-30">
				<div class="absolute -top-40 -right-40 w-96 h-96 bg-amber-500/10 rounded-full blur-3xl"></div>
				<div class="absolute -bottom-40 -left-40 w-96 h-96 bg-amber-500/10 rounded-full blur-3xl"></div>
			</div>
			
			<!-- Main content -->
			<main class="relative max-w-4xl mx-auto px-6 sm:px-8 lg:px-12 py-16 sm:py-24">
				<!-- Header -->
				<header class="mb-16 sm:mb-24">
					<div class="flex items-center gap-4 mb-8">
						<img 
							src={logo.src} 
							alt="Resonant Systems Logo" 
							class="h-12 w-auto"
						/>
						<div class="h-px flex-1 bg-gradient-to-r from-[#222222]/20 to-transparent"></div>
					</div>
				</header>
				
				<slot />
			</main>
			
			<!-- Footer -->
			<footer class="relative mt-32 pb-12">
				<div class="max-w-4xl mx-auto px-6 sm:px-8 lg:px-12">
					<div class="h-px bg-gradient-to-r from-transparent via-[#222222]/10 to-transparent mb-8"></div>
					<p class="text-sm text-[#222222]/60 text-center">
						Â© {new Date().getFullYear()} Resonant Systems. All rights reserved.
					</p>
				</div>
			</footer>
		</div>
	</body>
</html>
